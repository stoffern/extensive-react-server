{
  "presets": [
    "env",
    "react",
    "stage-0",
    "stage-2"
  ],
  "plugins": [
    "transform-runtime",
    ["relay", {
      "schema": "graphql/schema.graphql"
    }],
    ["babel-plugin-styled-components", {
      "ssr": true
    }],
    ["react-intl", {
      "messagesDir": "./build/intl/messages/"
    }],
    ["universal-import", {
      "babelServer": true
    }]
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    }
  }
}